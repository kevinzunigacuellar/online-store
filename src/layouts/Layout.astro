---
import { Bag } from "../components/Bag";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="mx-auto max-w-5xl py-12 px-4 sm:px-6">
    <header class="flex justify-between items-center mb-12 text-3xl">
      <a href="/" class="font-bold font-serif">Store</a>
      <Bag client:only="solid" />
    </header>
    <slot />
  </body>
</html>
